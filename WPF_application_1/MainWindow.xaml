<Window x:Class="WPF_application_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_application_1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" KeyDown="Window_KeyDown">
    <Grid>
        <Canvas x:Name="GameCanvas" Background="LightSteelBlue" Focusable="True" />
        <TextBlock x:Name="ScoreTextBlock" Text="Score: 0" Foreground="DarkRed" HorizontalAlignment="Left" Margin="10" FontSize="24" VerticalAlignment="Top" />
        <Button x:Name="RestartButton" Background="Bisque" Foreground="Chocolate" Content="RESTART" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Collapsed" Click="RestartButton_Click" Height="60" Width="120"/>
        <Button x:Name="StartGame" Background="Bisque" Foreground="Chocolate" Content="START" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center" Click="StartGame_Click" Height="60" Width="120" />
    </Grid>
</Window>
